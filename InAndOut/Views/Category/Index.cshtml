@model IEnumerable<InAndOut.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create new Category</a>
        </div>
    </div>
    <br />

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Category Name</th>
                <th>Changes</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="60%">@category.CategoryName</td>
                    <th width="40%">
                        <div class="w-100 btn-group">
                            <a class="btn btn-primary mx-1" asp-controller="Expense" asp-action="Update" asp-route-Id="@category.Id">Update</a>
                            <a class="btn btn-danger mx-1" asp-controller="Expense" asp-action="Delete" asp-route-Id="@category.Id">Delete</a>
                        </div>
                    </th>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Expense created yet</p>
    }
</div>